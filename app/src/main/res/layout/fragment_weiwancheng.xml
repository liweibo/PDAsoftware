<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_xiangying"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"
    app:contentPaddingBottom="5dp"
    app:contentPaddingLeft="@dimen/activity_horizontal_margin"
    app:contentPaddingRight="@dimen/activity_horizontal_margin"
    app:contentPaddingTop="5dp"
    android:clickable="true"

    android:background="@drawable/allmodel_click"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--第一行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        style="@style/TextStyle.Content"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:text="工单编号 - "
                        android:textColor="@color/xui_config_color_pure_black" />
                    <TextView
                        android:id="@+id/tv_weiwc_gdbh"
                        style="@style/TextStyle.Content"
                        android:ellipsize="end"
                        android:gravity="start|center_vertical"
                        android:text="10221"
                        android:textColor="@color/xui_config_color_pure_black" />
                </LinearLayout>
                <TextView
                    android:id="@+id/tv_weiwc_time"
                    style="@style/TextStyle.Explain"
                    android:layout_marginTop="3dp"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:text="2020-02-02 18:22:22"
                    android:textColor="?attr/xui_config_color_content_text" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="end|center_vertical">

                <com.xuexiang.xui.widget.button.roundbutton.RoundButton
                    android:id="@+id/tv_weiwc_status"
                    style="@style/RoundButton.Auto"
                    android:layout_height="20dp"
                    android:text="待处理"
                    app:rb_isRadiusAdjustBounds="true" />
            </LinearLayout>
        </LinearLayout>
        <!--第一行-->

        <TextView
            android:layout_width="match_parent"
            android:layout_height="8dp" />
        <!--        第二行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <TextView

                    style="@style/TextStyle.Content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:text="项目"
                    android:textColor="@color/xui_config_color_pure_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/tv_weiwc_xiangmuvalue"
                    style="@style/TextStyle.Explain"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:lines="2"
                    android:singleLine="false"
                    android:text="杭州地铁公司2号线牵引系统_售后服务中心"
                    android:textColor="?attr/xui_config_color_content_text" />
            </LinearLayout>
        </LinearLayout>
        <!--        第二行-->


        <!--        第三行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle.Content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:text="车型"
                    android:textColor="@color/xui_config_color_pure_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/tv_weiwc_chexingvalue"
                    style="@style/TextStyle.Explain"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:lines="2"
                    android:singleLine="false"
                    android:text="杭州地铁公司2号线"
                    android:textColor="?attr/xui_config_color_content_text" />
            </LinearLayout>
        </LinearLayout>
        <!--        第三行-->


        <!--        第4行-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start|center_vertical"
                android:orientation="vertical">

                <TextView
                    style="@style/TextStyle.Content"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:text="车号"
                    android:textColor="@color/xui_config_color_pure_black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="4"
                android:gravity="end|center_vertical">

                <TextView
                    android:id="@+id/weiwc_chehaovalue"
                    style="@style/TextStyle.Explain"
                    android:background="#fff"
                    android:ellipsize="end"
                    android:gravity="start|center_vertical"
                    android:lines="2"
                    android:singleLine="false"
                    android:text="8888"
                    android:textColor="?attr/xui_config_color_content_text" />
            </LinearLayout>
        </LinearLayout>
        <!--        第4行-->


    </LinearLayout>


</androidx.cardview.widget.CardView>