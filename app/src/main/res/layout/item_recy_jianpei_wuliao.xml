<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/activity_horizontal_margin"
    android:layout_marginTop="10dp"
    android:layout_marginEnd="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="6dp"
    app:cardBackgroundColor="@color/xui_config_color_white"
    app:cardCornerRadius="8dp"
    app:cardElevation="4dp"
    app:cardPreventCornerOverlap="true"

    >


    <LinearLayout
        android:clickable="false"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingLeft="16dp"
        android:paddingTop="5dp"
        android:paddingRight="16dp"
        android:paddingBottom="5dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"

            android:clickable="true"
            android:orientation="horizontal"

            >


            <TextView
                android:id="@+id/jianpei_item_miaoshu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:text="变流器"
                android:textColor="#1296db"
                android:textSize="18sp"
                android:textStyle="bold" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />

        <!--    需求到达时间    带有输入框的一行的ui-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"


            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="发出库房"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_fachukufang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"
                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#C0C0C0" />
        <!--        带有输入框的一行的ui-->


        <!--    需求到达时间    带有输入框的一行的ui-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"


            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="仓位"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_cangwei"
                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"

                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>


            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />
        <!--        带有输入框的一行的ui-->


        <!--    需求到达时间    带有输入框的一行的ui-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"


            android:clickable="true"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="物料状态"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_wuliao_zhuangtai"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"

                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />
        <!--        带有输入框的一行的ui-->


        <LinearLayout
            android:id="@+id/ll_jianpei_item_wuliaocode"

            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ripple_bggray"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="物料编码"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_wuliaocode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"

                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请扫描"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|right"

                    android:gravity="center_vertical|right"
                    android:src="@drawable/scan"></ImageView>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />
        <!--        带有输入框的一行的ui-->


        <LinearLayout
            android:id="@+id/ll_jianpei_item_xuliehao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ripple_bggray"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="序列号"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_xuliehao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"

                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请扫描"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|right"

                    android:gravity="center_vertical|right"
                    android:src="@drawable/scan"></ImageView>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />
        <!--        带有输入框的一行的ui-->


        <LinearLayout
            android:id="@+id/ll_jianpei_item_picihao"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/ripple_bggray"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="批次号"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right"
                android:orientation="horizontal">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_picihao"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"
                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请扫描"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>


                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center_vertical|right"

                    android:gravity="center_vertical|right"
                    android:src="@drawable/scan"></ImageView>
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />

        <LinearLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"


            >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="调拨数量"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_diaobonumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"

                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="请输入"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.5dp"


            android:background="#C0C0C0" />


        <LinearLayout
            android:clickable="true"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|left"
                    android:text="已拣配数量"
                    android:textColor="@color/xui_config_color_black"
                    android:textSize="17sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical|right"
                android:gravity="center_vertical|right">

                <com.crrc.pdasoftware.utils.ClearEditText
                    android:id="@+id/jianpei_item_yisaomiaonumber"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical|right"
                    android:background="@null"

                    android:drawablePadding="7dp"
                    android:focusedByDefault="false"
                    android:gravity="center_vertical|right"
                    android:hint="默认是调拨数量"
                    android:singleLine="true"
                    android:textColor="#808080"
                    android:textCursorDrawable="@null"

                    android:textSize="15sp">


                </com.crrc.pdasoftware.utils.ClearEditText>
            </LinearLayout>
        </LinearLayout>


    </LinearLayout>


</androidx.cardview.widget.CardView>